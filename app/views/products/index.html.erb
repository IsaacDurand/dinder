<div class="flex-container">
  <div class="margin-right">
    <h1>Products</h1>
    <ol>
      <% @products.each do |product| %>
        <li><%= product.name %></li>
      <% end %>
    </ol>
  </div>
  <div>
    <h1>Add a new product</h1>
    <%= form_with model: Product.new do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
      <%= form.button %>
    <% end %>
  </div>
</div>
