<%= link_to "Home", root_path %>
<%= link_to "Edit", edit_dish_path(@dish) %>

<% if flash[:notice] %>
  <p>
    <%= flash[:notice] %>
  </p>
<% end %>

<h1><%= @dish.name %></h1>
<p>Serves <%= @dish.base_servings %></p>

<h2>
  <% if @dish.recipe_url.present? %>
    <%= link_to "Recipe", @dish.recipe_url %>
  <% else %>
    Recipe
  <% end %>
</h2>

<% if @dish.recipe.present? %>
  <p><%= @dish.recipe %></p>
<% end %>

<h2>
  Ingredients
</h2>
<ol>
  <% @dish.items.each do |item| %>
    <li>
      <%= item.to_s %>
    </li>
  <% end %>
</ol>
